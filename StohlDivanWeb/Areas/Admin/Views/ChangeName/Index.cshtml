@{
    ViewData["Title"] = "Change Website Name And Address";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<br />
<br />

<h2 class="text-center">Website Name</h2>
<div class="d-flex justify-content-center mt-4">
    <form asp-action="Index" method="post" class="w-50">
        <div class="form-group">
          
            <input type="text" class="form-control" id="siteName" name="siteName" value="@ViewBag.SiteName" style="max-width: 300px; margin: auto;" />
        </div>
        <div class="form-group mt-3 text-center">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<br />
<br />

<h2 class="text-center">Website Address</h2>
<div class="d-flex justify-content-center mt-4">
    <form asp-action="ChangeAddress" method="post" class="w-50">
        <div class="form-group">

            <input type="text" class="form-control" id="siteAddress" name="siteAddress" value="@ViewBag.SiteAddress" style="max-width: 300px; margin: auto;" /> 
        </div>
        <div class="form-group mt-3 text-center">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


<br />
<br />