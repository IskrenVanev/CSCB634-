@model StatisticsVM

<div class="container">
    <h1>Statistics</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Total Products: @Model.TotalProducts</h2>
            <h2>Total Sales: @Model.TotalSales</h2>
            <h2>Total Orders: @Model.TotalOrders</h2>
            <h2>Average Order Value: @Model.AverageOrderValue</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Sales by Category</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Sales</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.SalesByCategory)
                    {
                        <tr>
                            <td>@category.Key</td>
                            <td>@category.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h3>Suppliers</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Supplier Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model.Suppliers)
                    {
                        <tr>
                            <td>@supplier.SupplierName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Top Selling Products</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Sales</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.TopSellingProducts)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Sales</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h3>Sales Trends</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Sales</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trend in Model.SalesTrends)
                    {
                        <tr>
                            <td>@trend.Date.ToShortDateString()</td>
                            <td>@trend.Sales</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Top Customers</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Sales</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.TopCustomers)
                    {
                        <tr>
                            <td>@customer.CustomerName</td>
                            <td>@customer.Sales</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h3>Users</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
