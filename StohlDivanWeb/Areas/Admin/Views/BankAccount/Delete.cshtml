@model StohlDivan.Models.BankAccount

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Bank Account</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="DeleteConfirmed" method="post">
            <input asp-for="Id" type="hidden" />

            <div class="border p-3 mt-4">
                <div class="alert alert-warning" role="alert">
                    Are you sure you want to delete this bank account?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Bank Name:</dt>
                    <dd class="col-sm-9">@Model.BankName</dd>

                    <dt class="col-sm-3">Account Number:</dt>
                    <dd class="col-sm-9">@Model.AccountNumber</dd>

                    <dt class="col-sm-3">IBAN:</dt>
                    <dd class="col-sm-9">@Model.IBAN</dd>

                    <dt class="col-sm-3">Swift Code:</dt>
                    <dd class="col-sm-9">@Model.SwiftCode</dd>
                </dl>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="BankAccount" asp-action="Index" class="btn btn-secondary border form-control">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
