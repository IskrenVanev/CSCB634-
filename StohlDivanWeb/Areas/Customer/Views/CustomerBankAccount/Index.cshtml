@model List<BankAccountVM>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Bank Accounts List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="CustomerBankAccount" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add new Bank Account
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Bank Name
                    </th>
                    <th>
                        Account Number
                    </th>
                    <th>
                        IBAN
                    </th>
                    <th>
                        Swift Code
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bankAccountVM in Model.OrderBy(u => u.BankName))
                {


                    <tr>
                        <td>
                            @bankAccountVM.BankName
                        </td>
                        <td>
                            @bankAccountVM.AccountNumber
                        </td>
                        <td>
                            @bankAccountVM.IBAN
                        </td>
                        <td>
                            @bankAccountVM.SwiftCode
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="CustomerBankAccount" asp-action="Edit" asp-route-id="@bankAccountVM.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="CustomerBankAccount" asp-action="Delete" asp-route-id="@bankAccountVM.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
