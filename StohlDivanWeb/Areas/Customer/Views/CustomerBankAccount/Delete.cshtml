@model BankAccountVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Bank Account</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="DeleteConfirmed" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="BankName" class="form-control border-0 shadow" disabled />
                    <label asp-for="BankName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="AccountNumber" class="form-control border-0 shadow" disabled />
                    <label asp-for="AccountNumber" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="IBAN" class="form-control border-0 shadow" disabled />
                    <label asp-for="IBAN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="SwiftCode" class="form-control border-0 shadow" disabled />
                    <label asp-for="SwiftCode" class="ms-2"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="CustomerBankAccount" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>