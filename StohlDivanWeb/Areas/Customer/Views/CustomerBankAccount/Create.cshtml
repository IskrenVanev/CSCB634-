@model BankAccountVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add bank account</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">

            <div class="border p-3">

                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="BankName" class="form-control border-0 shadow" />
                    <label asp-for="BankName" class="ms-2"></label>
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="AccountNumber" class="form-control border-0 shadow" />
                    <label asp-for="AccountNumber" class="ms-2"></label>
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="IBAN" class="form-control border-0 shadow" />
                    <label asp-for="IBAN" class="ms-2"></label>
                    <span asp-validation-for="IBAN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="SwiftCode" class="form-control border-0 shadow" />
                    <label asp-for="SwiftCode" class="ms-2"></label>
                    <span asp-validation-for="SwiftCode" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Add</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="CustomerBankAccount" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
